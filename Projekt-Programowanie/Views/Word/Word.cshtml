@using Projekt_Programowanie.Models.MODELS
@model IEnumerable<Slowo>
@{
    ViewData["Title"] = "Dodaj pytanie lub odpowiedź";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 style="font-size:xx-large">Lista Słów:</h4>
        </p>
        <div class="form-group">
            @foreach (var item in Model)
            {
                <div style="color: forestgreen; font-size: x-large" class="text">
                    @item.NazwaSlowa
                    <a style="font-size:medium; color:greenyellow" href="@Url.Action("Edit", "Word", new { id = item.ID_Slowa })">Edytuj</a>
                    <a style="font-size:medium; color:greenyellow" href="@Url.Action("Usun", "Word", new { id = item.ID_Slowa })">Usuń</a>
                </div>
            }
        </div>
    </div>
</div>
