@using Projekt_Programowanie.Models.MODELS
@model IEnumerable<Pytanie>
@{
    ViewData["Title"] = "Lista Pytań";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4 style="font-size:xx-large">Generator Krzyżówki</h4>
        </p>
        <div class="form-group">
            @foreach (var item in Model)
            {
                <div style ="color:forestgreen; font-size:x-large" class="text">@item.Tresc
                <a style="font-size:medium; color:greenyellow" href="@Url.Action("Edit", "Question", new { id = item.ID_Pytania })">Edytuj</a>
                <a style="font-size:medium; color:greenyellow" href="@Url.Action("Usun", "Question", new { id = item.ID_Pytania })">Usuń</a>
                </div>
            }
        </div>
    </div>
</div>