@using Projekt_Programowanie.Models.MODELS
@model Pytanie
@{
    ViewData["Title"] = "Edytuj Pytanie";
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="@Url.Action("Edit","Question")">
    @Html.HiddenFor(model => model.ID_Pytania)
    <div class="form-group">
        <label asp-for="Tresc" class="control-label">Nazwa Słowa:</label>
        <input asp-for="Tresc" class="form-control" />
        <span asp-validation-for="Tresc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trudnosc" class="control-label">Kategoria:</label>
        <input asp-for="Trudnosc" class="form-control" />
        <span asp-validation-for="Trudnosc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Odpowiedz" class="control-label">Odpowiedź:</label>
        <select asp-for="Odpowiedz" class="form-select">
        @foreach (var item in ViewData["Slowa"] as IEnumerable<Slowo>)
        {
            <option value="@item.ID_Slowa">@item.NazwaSlowa</option>
        }
        </select>
        <span asp-validation-for="Odpowiedz" class="text-danger"></span>
    </div>

    <input class="btn btn-outline-success float-right" type="submit" asp-controller="Question" asp-action="Edit" />
    <a class="btn btn-secondary" asp-controller="Question" asp-action="Question">Anuluj</a>
</form>