@using Projekt_Programowanie.Models.MODELS
@{
    ViewData["Title"] = "Dodaj pytanie lub odpowiedź";
}
@model Krzyzowka
<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Generator Krzyżówki</h4>
        </p>
        <form method="post" asp-controller="Cross" asp-action="Generator">
            <div class="form-group">
                <div class="col-md-8 offset-2">
                    <label asp-for="Trudnosc">Trudność:</label>
                    <input asp-for="Trudnosc" class="form-select-sm" placeholder="1" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-8 offset-2">
                    <label asp-for="Wzor">Wzór:</label>
                    <input asp-for="Wzor" class="form-select-sm" placeholder="1" />
                </div>
            </div>
            <div class="form-group mt-3 mb-5">
                <input class="btn btn-outline-success float-right" type="submit" value="Generuj" />
            </div>
        </form>
    </div>
</div>
