<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grenerator Krzyżówek</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projekt_krzyżówki.styles.css" asp-append-version="true" />
</head>
<body style="background-color:	#003900; font-size:large">
    <header style="background-color:black">
        <nav class="navbar navbar-expand-lg navbar-expand-md navbar-expand-sm">
            <div class="container-fluid">
                <a style="color:forestgreen; font-family:fantasy;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Grenerator Krzyżówek</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Autorzy">Autorzy</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Opis">Opis</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Generator1">Generator</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Dodaj">Dodaj</a>
                        </li>
                        <li class="nav-item">
                            <a style="color:forestgreen; font-family:'Baskerville Old Face'" class="nav-link" asp-area="" asp-controller="Home" asp-action="Listy">Listy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="color:yellowgreen" class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div style="color:yellowgreen" class="container">
            <p>@DateTime.Now - "Generator Krzyżówek"</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
